<?xml version="1.0" encoding="utf-8"?>

                                                    
    
                                                
                                           
                                                                                  
                                                                                        
           
    <ScrollView android:tag="layout/vlc_question_dialog_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:tag="binding_1"      
                android:layout_margin="10dp" />
            <Button
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:tag="binding_2"                                                                            
                android:layout_toLeftOf="@+id/action2"
                                                      
                tools:targetApi="11"
                style="?android:attr/borderlessButtonStyle" />
            <Button
                android:id="@+id/action2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:layout_toLeftOf="@+id/action1"
                android:tag="binding_3"             
                                                                                                        
                                                       
                tools:targetApi="11"
                style="?android:attr/borderlessButtonStyle" />
            <Button
                android:id="@+id/action1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/text"
                android:tag="binding_4"             
                                                                                                        
                                                       
                tools:targetApi="11"
                style="?android:attr/borderlessButtonStyle" />
        </RelativeLayout>
    </ScrollView>
         